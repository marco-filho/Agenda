@model Evento
@{
    ViewData["Title"] = "Excluir Evento";
}

<form method="post" asp-action="DeleteEventoPost">
    <input asp-for="Id" hidden />
    <div class="container-fluid shadow rounded-lg bg-white col-auto">
        <div class="text-primary form-group row">
            <h1 class="col ml-1 pt-2">
                @ViewData["Title"]
            </h1>
            <div class="w-100"></div>
            <h4 class="col text-danger text-center">
                Você tem certeza que deseja excluir o evento?
            </h4>
        </div>

        <div class="form-group row px-2 py-1">
            <div class="col py-1" style="min-width: 20em">
                <label asp-for="Nome"></label>
                <input asp-for="Nome" class="form-control" readonly />
            </div>
            <div class="col-auto row">
                <div class="col-auto py-1">
                    <label asp-for="DataInicial"></label>
                    <input asp-for="DataInicial" class="form-control w-auto" type="datetime-local" readonly>
                </div>
                <div class="col-auto py-1">
                    <label asp-for="DataFinal"></label>
                    <input asp-for="DataFinal" class="form-control w-auto" type="datetime-local" readonly>
                </div>
                <div class="col-auto py-1">
                    <label asp-for="Local"></label>
                    <input asp-for="Local" class="form-control" readonly />
                </div>
                <div class="col-auto py-1">
                    <label asp-for="Tipo"></label>
                    <select asp-for="Tipo" class="form-control w-auto" readonly>
                        <option></option>
                        <option>Exclusivo</option>
                        <option>Compartilhado</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="form-group row px-2">
            <div class="col">
                <label asp-for="Descricao"></label>
                <textarea class="form-control" asp-for="Descricao" rows="8"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="col-lg-4 col-md-5 col-sm-12 py-1 px-2">
                <partial name="_EditarListaParticipantesPartial" model="Model.ListaDeParticipantes" />
            </div>
        </div>
        <div class="form-group row py-3 px-2">
            <div class="col row justify-content-end">
                <div class="col-auto">
                    <input type="submit" class="btn btn-danger w-auto" value="Excluir" />
                </div>
                <div class="col-auto">
                    <a asp-action="Index" class="btn btn-primary w-auto">Cancelar</a>
                </div>
            </div>
        </div>
    </div>
</form>

